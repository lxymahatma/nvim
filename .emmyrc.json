{
  "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
  "diagnostics": {
    "diagnosticInterval": 500,
    "disable": [
      "missing-fields"
    ],
    "enable": true,
    "enables": [],
    "globals": [],
    "globalsRegex": [],
    "severity": {}
  },
  "runtime": {
    "version": "LuaJIT",
    "extensions": [
      ".lua"
    ],
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua"
    ]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "$HOME/.local/share/nvim/lazy"
    ]
  }
}
